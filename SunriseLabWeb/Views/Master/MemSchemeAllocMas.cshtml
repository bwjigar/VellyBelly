@{
    ViewBag.Title = "Member Scheme Allocation Master";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link href="~/Content/css/daterangepicker.css" rel="stylesheet" />
}
<style>
    .ag-paging-page-summary-panel {
        left: 10px;
        position: relative;
    }

    .ag-theme-balham .ag-cell {
        white-space: normal !important;
        line-height: inherit;
        overflow-y: auto;
    }

    .Yes {
        margin-bottom: 1px;
        color: white;
        background-color: #008000ab;
        padding: 2px 5px;
        border-radius: 16px;
        font-weight: bold;
    }

    .No {
        margin-bottom: 1px;
        color: white;
        background-color: #ff0000cf;
        padding: 2px 5px;
        border-radius: 16px;
        font-weight: bold;
    }
</style>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="col-xl-11 col-lg-12 col-md-12 col-sm-12 col-12">
            <h4 class="card-title m-ttl">Member Scheme Allocation Master</h4>
        </div>
        <div class="col-xl-2 col-lg-12 col-md-12 col-sm-12 col-12" id="divmyModalbtn" style="padding: 14px 0px 14px 20px;margin-top: -40px;">
            <button type="button" class="btn btn-inverse-primary btn-fw" onclick="AddNew();">Add New</button>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card" style="display:none;">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-lg-2">
                        <label>From Date</label>
                        <input type="text" class="form-control form-control-sm" placeholder="From Date" id="txtFromDate" name="txtFromDate">
                    </div>
                    <div class="col-lg-2">
                        <label>To Date</label>
                        <input type="text" class="form-control form-control-sm" placeholder="To Date" id="txtToDate" name="txtToDate">
                    </div>
                    <div class="col-lg-3">
                        <label>Search</label>
                        <input type="text" class="form-control form-control-sm" placeholder="Search" id="txtSearch" name="txtSearch">
                    </div>
                    <div class="col-lg-5" id="divmyModalbtn" style="padding: 14px 0px 14px 20px;">
                        <button type="button" class="btn btn-inverse-success btn-fw" onclick="btnSearch();">Search</button>
                        @*<button type="button" class="btn btn-inverse-info btn-fw" onclick="ExcelGet();">Excel</button>*@
                        <button type="button" class="btn btn-inverse-dark btn-fw" onclick="Clear();">Reset</button>
                        <button type="button" class="btn btn-inverse-primary btn-fw" onclick="Back();">Add New</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div style="width:100%;">
            <div class="aggrid-section viewcart">
                <div class="row">
                    <div class="col-xl-12">
                        <!---- =============== start ag-grid =============== ---->

                        <div id="myGrid" style="width: 100%;height:500px;" class="ag-theme-balham">

                        </div>

                        <!---- =============== end ag-grid ================= ----->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade social-model" id="Remove">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Remove Scheme Allocation Detail</h4>
                <button type="button" class="close" onclick="ClearRemoveModel()">&times;</button>
            </div>
            <div class="modal-body">
                <li>Are you sure to remove this record </li>
            </div>

            <div class="modal-footer">
                <button id="btnSendMail" class="btn btn-primary" type="button" onclick="DeleteData()">Remove</button>
                <button id="btnremove" class="btn btn-primary" type="button" onclick="ClearRemoveModel()">Cancel</button>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Content/js/wow.min.js"></script>
    <script src="~/Content/js/moment.min.js"></script>
    <script src="~/Content/js/daterangepicker.min.js"></script>
    <script src="~/Content/js/ag-grid-enterprise.min.js"></script>
    <script src="~/Content/js/Pages/MemSchemeAllocMas.js"></script>
}
