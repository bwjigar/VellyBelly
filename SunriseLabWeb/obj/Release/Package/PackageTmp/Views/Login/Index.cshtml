@model SunriseLabWeb.Models.UserLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>VELLY BELLY CLUB</title>
    <link rel="stylesheet" href="~/Content/Login/css/bootstrap.min.css">
    <link href="~/Content/Login/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet">
    <link href="~/Content/Login/css/animate.css" rel="stylesheet">
    <link href="~/Content/Login/css/main.css" rel="stylesheet">
    <link href="~/Content/Plugins/toastr/toastr.css" rel="stylesheet" />

    <!-- plugins:css -->
    <link rel="stylesheet" href="~/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/images/nav-logo.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto" style="margin-top: -150px;">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <center><img src="/Content/images/vellybelly.jpg" alt="logo" style="width: 185px; margin-top: -35px;" /></center>
                            </div>
                            <h6 class="font-weight-light">Sign in to continue.</h6>

                            @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { id = "login-form" }))
                            {
                                @Html.AntiForgeryToken();
                                @Html.ValidationSummary(true);
                                <div class="form-group">
                                    @Html.TextBoxFor(a => a.Username, new { @class = "form-control form-control-lg", placeholder = "Username" })
                                    @Html.ValidationMessageFor(m => m.Username)

                                    @*<input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">*@
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(a => a.Password, new { @value = Model.Password, @class = "form-control form-control-lg", placeholder = "Password" })
                                    @Html.ValidationMessageFor(m => m.Password)

                                    @*<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">*@
                                </div>
                                <div class="mt-3">
                                    <button type="submit" id="btnLogin" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" data-wow-delay="1s">SIGN IN</button>
                                </div>
                                @*<div class="my-2 d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <label class="form-check-label text-muted">
                                                @Html.CheckBoxFor(x => x.isRemember, new { @class = "form-check-input" })
                                                Keep me signed in
                                            </label>
                                        </div>
                                    </div>*@
                                <div class="text-center mt-4 font-weight-light" style="display:none;">
                                    Don't have an account? <a target="_blank" href="https://sunrisediamonds.com.hk/Login/Registration" class="text-primary">Create</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <script src="~/Content/Login/js/jquery.min.js"></script>
    <script src="~/Content/Login/js/bootstrap.min.js"></script>
    <script src="~/Content/Login/js/popper.min.js"></script>
    <script src="~/Content/Login/js/wow.min.js"></script>
    <script src="~/Content/Login/js/LoginCustom.js"></script>
    @*<script src="~/Content/Login/js/particles.js"></script>
        <script src="~/Content/Login/js/app.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>
    <script src="~/Content/Plugins/toastr/toastr.js"></script>

    <!-- plugins:js -->
    @*<script src="~/vendors/js/vendor.bundle.base.js"></script>*@
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/hoverable-collapse.js"></script>
    <script src="~/js/template.js"></script>
    <script src="~/js/settings.js"></script>
    <script src="~/js/todolist.js"></script>
    <!-- endinject -->

    <script type="text/javascript">
        $(document).ready(function () {
            //$("input[type='hidden' name='isRemember']").remove();
            var str = '';
            if ('@TempData["Message"]' != '') {
                str = replaceSpecialHtml('@TempData["Message"]');
                $.alert({
                    title: '',
                    content:str,
                });
            }
            else if (location.href.indexOf("Msg=") > -1) {
                str = location.href.substring(location.href.indexOf("Msg=") + 4);
                str = str.replace(/%20/g, ' ');

                $.alert({
                    title: '',
                    content: str,
                });
            }

            var url = '@ViewData["URL"]';
            if (url != "") {
                window.location.href = url;
            }
        });
        function replaceSpecialHtml(str) {
            str = str.replace(/&lt;/g, '<');
            str = str.replace(/&quot;/g, '"');
            str = str.replace(/&amp;/g, '&');
            str = str.replace(/&gt;/g, '>')
            return str;
        }
    </script>
</body>

</html>
