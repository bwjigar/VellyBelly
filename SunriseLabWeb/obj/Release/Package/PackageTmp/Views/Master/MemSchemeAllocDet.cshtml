
@{
    ViewBag.Title = "Member Scheme Allocation Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .ui-menu {
        width: 434.328px !important;
    }

        .ui-menu .ui-menu-item {
            width: 415.328px !important;
        }

    .autocomplete {
        position: relative;
        display: inline-block;
    }

    .g-head-t {
        font-size: 12px;
        padding: 0 12px;
        color: grey;
    }

    .g-amt-t {
        font-size: 15px;
        padding: 0 12px;
        color: #003d66;
        font-weight: 700;
    }

    .spn-Yes1 {
        border: 1px solid #e5e5e5;
        border-radius: 10px;
        padding: 0px 5px 0px 5px;
        font-size: 10px;
        font-weight: 600;
        background: #28a745;
        color: white;
    }

    .spn-No1 {
        border: 1px solid #e5e5e5;
        border-radius: 10px;
        padding: 0px 5px 0px 5px;
        font-size: 10px;
        font-weight: 600;
        background: #ef0808;
        color: white;
    }

    .disabled {
        cursor: not-allowed;
    }

    .btn-spn-opt:hover {
        background-color: #80808017;
        border: 1px solid #003d66;
    }

    .btn-spn-opt {
        border: 1px solid #e5e5e5;
        border-radius: 28px;
        padding: 5px 15px;
        float: left;
        margin-bottom: 5px;
        margin-right: 5px;
        transition-duration: 0.3s;
        -webkit-transition: 0.3s;
        cursor: pointer;
        font-size: 11px;
        white-space: nowrap;
        font-weight: 600;
        background: #fff;
        color: #003d66;
        position: relative;
        z-index: 0;
        overflow: hidden;
        margin-top: 5px;
    }

    .btn-spn-opt-active {
        color: #fff !important;
        background-color: #003d66 !important;
    }

    .pwd_field {
        -webkit-text-security: disc;
    }

    #txtCompanyName_suggestion {
        font-size: 11.5px;
    }

    [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak, .ng-hide:not(.ng-hide-animate) {
        display: none !important;
    }

    .img-block {
        display: block;
    }

    .img-none {
        display: none;
    }

    ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .api-filter-popup ul.color-whit-box li {
        display: inline-block;
        margin: 4px 4px;
    }

    ul.color-whit-box li.active {
        background: rgba(0, 61, 102,1);
        color: #fff;
    }

    ul.color-whit-box li {
        padding: 3px 13px;
        -webkit-box-shadow: 0 0 2px rgba(0, 61, 102,0.3);
        -moz-box-shadow: 0 0 2px rgba(0, 61, 102,0.3);
        box-shadow: 0 0 2px rgba(0, 61, 102,0.3);
        margin: 2px 4px;
        -webkit-border-radius: 50px;
        -moz-border-radius: 50px;
        border-radius: 50px;
        cursor: pointer;
        font-size: 14px;
        color: #003d66;
        font-weight: 500;
        background: #fff;
        white-space: nowrap;
        -webkit-transition: all 0.3s;
        -moz-transition: all 0.3s;
        -ms-transition: all 0.3s;
        -o-transition: all 0.3s;
        transition: all 0.3s;
    }

    .custom-box-list p {
        word-break: break-all;
        border: 1px solid #ced4da;
        padding: 0px 4px;
        font-weight: 400;
        color: #495057;
        background-color: #fff;
        background-clip: padding-box;
        font-size: 13px;
        height: 35px;
        line-height: normal;
        border-radius: .25rem;
        transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        overflow: auto;
        margin: 0;
    }

    .Fi-Criteria {
        font-size: 13px;
    }

    .tabboxdiv > .row {
        border-bottom: none;
    }

    .allcrt {
        margin: 0px 4px 4px 0px;
        color: #003d66;
        font-weight: normal !important;
        padding: 5px 12px;
    }

    .fncy-rst {
        right: -6px;
        top: 13px;
        position: absolute;
        /*font-size: 14px;*/
        cursor: pointer;
    }

    .sym-sec .carat-dropdown-main ul li {
        display: inline-block;
        margin: -3px 0px 0px 0px;
        width: 21%;
    }

    .g-head-t {
        font-size: 12px;
        padding: 0 12px;
        color: grey;
    }

    .g-amt-t {
        font-size: 12px;
        padding: 0 12px;
        color: #003d66;
    }

    .f_clr_clk {
        margin-top: -11px;
        z-index: 9999;
        width: 109px;
    }

    .fltr-bx {
        word-break: break-all;
        line-height: 1.3;
        font-size: 11px !important;
        padding: 0.1rem 0.1rem;
        height: 2rem;
        border: 1px solid #CED4DA;
        font-weight: 400;
        border-radius: 0.375rem !important;
        color: black;
        overflow: auto;
    }

    .chebox-fill, .chebox-empty {
        cursor: pointer !important;
        width: 21px !important;
        margin-top: 0px !important;
        height: 21px !important;
        border-radius: 0% !important;
    }
</style>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="col-xl-11 col-lg-12 col-md-12 col-sm-12 col-12">
            <h4 class="card-title m-ttl">Member Scheme Allocation Detail</h4>
        </div>
        <div class="col-xl-2 col-lg-12 col-md-12 col-sm-12 col-12" id="divmyModalbtn" style="padding: 14px 0px 14px 20px;margin-top: -40px;">
            <button type="button" class="btn btn-inverse-primary btn-fw" onclick="Back();">Back</button>
        </div>
    </div>
</div>

<input type="hidden" id="hdn_CustomerId" />
<input type="hidden" id="hdn_MemberId" />
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-4">
                        <label>Member Id <span style="color:red;">*</span></label>
                        <select class="form-control form-control-sm" id="ddlMemberId" name="ddlMemberId" onchange="ddlMemberIdChange();">
                            <option value="">Select</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label>Member Name</label>
                        <input type="text" class="form-control form-control-sm" id="txtMemberName" name="txtMemberName" disabled>
                    </div>
                    <div class="col-md-4">
                        <label>Address</label>
                        <textarea class="form-control form-control-sm" rows="4" id="txtAddress" name="txtAddress" disabled></textarea>
                    </div>
                    <div class="col-md-4">
                        <label>Phone No.</label>
                        <input type="text" class="form-control form-control-sm" id="txtPhoneno" name="txtPhoneno" disabled>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin stretch-card" style="display:none;" id="divScheme">
        <div class="card">
            <div class="card-body row">
                <div class="table-responsive pt-3 col-md-12">
                    <button type="button" class="btn btn-blue-primary btn-fw" onclick="AddNewRow();" style="float:right;margin-top: -12px;margin-bottom: 5px;">Add Row</button>
                    <div class="table-responsive">
                        <center>
                            <table class="table table-hover table-bordered" id="mytable" style="width: 75%;">
                                <thead>
                                    <tr>
                                        <th style="width:5%;">Sr.</th>
                                        <th style="width:12%;">Date</th>
                                        <th style="width:30%;">Scheme Name</th>
                                        <th style="width:22%;">Package</th>
                                        <th style="width:0%;">Delete</th>
                                    </tr>
                                </thead>
                                <tbody id="myTableBody" class="ui-sortable">
                                </tbody>
                            </table>
                        </center>
                    </div>
                    <button type="button" class="btn btn-inverse-success btn-fw" onclick="SaveData();" style="float:right;margin-top: 12px;margin-bottom: 5px;">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Content/js/Pages/MemSchemeAllocDet.js"></script>
}